{
  "name": "react-mesto-api-full",
  "version": "1.0.0",
  "description": "Репозиторий для приложения проекта `Mesto`, включающий фронтенд и бэкенд части приложения со следующими возможностями: авторизации и регистрации пользователей, операции с карточками и пользователями.",
  "scripts": {
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix ./**/*.js*",
    "postinstall": "(cd frontend && npm install) && (cd ../backend && npm install)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eoneof-yap/react-mesto-api-full.git"
  },
  "author": "Nikolay Ivanov",
  "license": "ISC",
  "homepage": "https://github.com/eoneof-yap/react-mesto-api-full#readme",
  "rules": {
    "no-underscore-dangle": 0,
    "react/prop-types": 0
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "lerna": "^5.5.2"
  },
  "workspaces": [
    "frontend/*",
    "backend/*"
  ]
}
